{
	"packages": {
		"packages/logger": {
			"component": " @ui5/logger",
			"extra-files": [
				"package-lock.json"
			]
		},
		"packages/fs": {
			"component": " @ui5/fs",
			"extra-files": [
				"package-lock.json"
			]
		},
		"packages/builder": {
			"component": " @ui5/builder",
			"extra-files": [
				"package-lock.json"
			]
		},
		"packages/server": {
			"component": " @ui5/server",
			"extra-files": [
				"package-lock.json"
			]
		},
		"packages/project": {
			"component": " @ui5/project",
			"extra-files": [
				"package-lock.json"
			]
		},
		"packages/cli": {
			"component": " @ui5/cli",
			"extra-files": [
				"package-lock.json"
			]
		}
	},
	"release-type": "node",
	"pull-request-header": ":tractor: New release prepared",
	"pull-request-title-pattern": "release:${component} v${version}",
	"separate-pull-requests": true,
	"include-component-in-tag": true,
	"changelog-sections": [
		{
			"type": "feat",
			"section": "Features"
		},
		{
			"type": "fix",
			"section": "Bug Fixes"
		},
		{
			"type": "perf",
			"section": "Performance Improvements"
		},
		{
			"type": "deps",
			"section": "Dependencies"
		},
		{
			"type": "revert",
			"section": "Reverts"
		},
		{
			"type": "docs",
			"section": "Documentation",
			"hidden": true
		},
		{
			"type": "style",
			"section": "Styles",
			"hidden": true
		},
		{
			"type": "refactor",
			"section": "Code Refactoring",
			"hidden": true
		},
		{
			"type": "test",
			"section": "Tests",
			"hidden": true
		},
		{
			"type": "build",
			"section": "Automation",
			"hidden": true
		},
		{
			"type": "ci",
			"section": "Continuous Integration",
			"hidden": true
		},
		{
			"type": "release",
			"section": "Release",
			"hidden": true
		}
	]
}
